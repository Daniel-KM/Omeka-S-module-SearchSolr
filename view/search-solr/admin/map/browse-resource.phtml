/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var \SearchSolr\Api\Representation\SolrCoreRepresentation $solrCore
 * @var \SearchSolr\Api\Representation\SolrMapRepresentation[] $maps
 * @var string $resourceName
 */

$translate = $this->plugin('translate');
$escape = $this->plugin('escapeHtml');
?>
<?php $this->htmlElement('body')->appendAttribute('class', 'solr-map browse'); ?>

<?php echo $this->pageTitle(sprintf($translate('Solr maps for "%s"'), $resourceName)); ?>

<div id="page-actions">
    <?php $addUrl = $this->url('admin/solr/core-id-map-resource', [
        'coreId' => $solrCore->id(),
        'resourceName' => $resourceName,
        'action' => 'add',
    ]); ?>
    <a class="button" href="<?php echo $addUrl ;?>"><?php echo $translate('Add new map'); ?></a>
    <?php $completeUrl = $this->url('admin/solr/core-id-map-resource', [
        'coreId' => $solrCore->id(),
        'resourceName' => $resourceName,
        'action' => 'complete',
    ]); ?>
    <a class="button" href="<?php echo $completeUrl; ?>" title="<?php echo $translate('Add a text index to all missing and used properties.'); ?>"><?php echo $translate('Map all used properties'); ?></a>
    <?php $cleanUrl = $this->url('admin/solr/core-id-map-resource', [
        'coreId' => $solrCore->id(),
        'resourceName' => $resourceName,
        'action' => 'clean',
    ]); ?>
    <a class="button" href="<?php echo $cleanUrl; ?>" title="<?php echo $translate('Remove maps of properties that are not used.'); ?>"><?php echo $translate('Remove unused properties'); ?></a>
</div>

<nav class="breadcrumbs">
    <?php
    echo $this->hyperlink($translate('Solr cores'), $this->url('admin/solr'));
    echo $this->hyperlink(sprintf($translate('Resources list for core "%s"'), $solrCore->name()), $this->url('admin/solr/core-id-map', [], true));
    ?><span><?php
    echo sprintf($translate('Maps for "%s"'), $resourceName);
    ?></span>
</nav>

<?php if (count($maps)): ?>
    <table class="tablesaw" data-tablesaw-mode="stack">
        <thead>
            <tr>
                <th><?php echo $translate('Solr field'); ?></th>
                <th><?php echo $translate('Source'); ?></th>
                <th><?php echo $translate('Translated default label'); ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($maps as $map): ?>
                <?php $mapSettings = $map->settings(); ?>
                <tr>
                    <td>
                        <span><?php echo $map->fieldName(); ?></span>
                        <ul class="actions">
                            <li>
                                <?php
                                    $href = $map->adminUrl('edit');
                                    echo $this->hyperlink('', $href, [
                                        'class' => 'o-icon-edit',
                                        'title' => $translate('Edit'),
                                    ]);
                                ?>
                            </li>
                            <li>
                                <a href="#"
                                data-sidebar-content-url="<?php echo $escape($map->url('delete-confirm')); ?>"
                                class="o-icon-delete sidebar-content"
                                aria-label="<?php echo $escape($translate('Delete')); ?>"
                                title="<?php echo $escape($translate('Delete')); ?>"></a>
                            </li>
                        </ul>
                    </td>
                    <td><?php echo $map->source(); ?></td>
                    <td><?php if (!empty($mapSettings['label'])) echo $translate($mapSettings['label']); ?></td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php else: ?>
    <p>
        <?php echo $translate('There is no maps defined yet.'); ?>
        <a href="<?php echo $escape($addUrl); ?>"><?php echo $translate('Add a new map'); ?></a>
    </p>
<?php endif; ?>

<div class="sidebar">
    <a href="#"
        class="sidebar-close o-icon-close"
        aria-label="<?php echo $escape($translate('Close')); ?>"
        title="<?php echo $escape($translate('Close')); ?>"></a>
    <div class="sidebar-content"></div>
</div>
